# Database (PostgreSQL for production, SQLite for local development)
DATABASE_URL="file:./dev.db"
# For production: DATABASE_URL="postgresql://user:password@host:5432/dbname"

# Arc Network (Primary chain for USDC payments)
NEXT_PUBLIC_ARC_CHAIN_ID="1243" # Arc Testnet chain ID (update if different)
NEXT_PUBLIC_ARC_RPC_URL="https://api.testnet.arc.network/rpc" # Arc Testnet RPC endpoint
NEXT_PUBLIC_ARCSCAN_URL="https://testnet.arcscan.io" # Arc Testnet block explorer

# USDC Contract Addresses
# Arc Testnet USDC address (required - get from Arc documentation)
NEXT_PUBLIC_USDC_ADDRESS_ARC="0x..." # Replace with actual USDC address on Arc testnet
